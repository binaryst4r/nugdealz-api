.row
  .col-md-6
    %h2 Medical Dealz
    - @dispensary.deals.medical.each do |deal|
      .row.border-bottom.padding-top
        %h3.text-left= deal.title
        .col-md-2.text-center
          %p
            %span.point-value= deal.point_value
            %br/
            points
        .col-md-8
          %p.lead
            = deal.description
            %b
              (#{deal.quantity_available} left)
        .col-md-2
          %center
            = link_to 'Redeem', confirm_deal_url(deal: deal.id), class: 'btn btn-default btn-xs'
  .col-md-6.border-left
    %h2.text-right Recreational
    - @dispensary.deals.recreational.each do |deal|
      .row.border-bottom.padding-top
        %h3.text-right= deal.title
        .col-md-2
          %center
            = link_to 'Redeem', confirm_deal_url(deal: deal.id), class: 'btn btn-default btn-xs'
        .col-md-8
          %p.lead
            = deal.description
            %b
              (#{deal.quantity_available} left)
        .col-md-2.text-center
          %p
            %span.point-value= deal.point_value
            %br/
            points
