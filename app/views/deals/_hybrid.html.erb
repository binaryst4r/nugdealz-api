<div class="row">
  <div class="col-md-6">
    <% @dispensary.deals.medical.each do |deal| %>
      <div class='row border-bottom-light-green padding-top'>
        <h3 class='text-center green'><%= deal.title %></h3>
        <div class='col-md-2 text-center'>
          <p><span class='point-value'><%= deal.point_value %></span>
            <br>
            points
          </p>
        </div>
        <div class='col-md-8'>
          <p class='lead'><%= deal.description %> <b>(<%= deal.quantity_available %> left)</b></p>
        </div>

        <div class='col-md-2'>
          <%= link_to 'Redeem', confirm_deal_url(deal: deal.id), class: 'btn btn-green btn-xs' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-6 border-left-light-green">
    <% @dispensary.deals.recreational.each do |deal| %>
      <div class='row border-bottom-light-green padding-top'>
        <h3 class='text-center pink'><%= deal.title %></h3>
        <div class='col-md-2'>
          <%= link_to 'Redeem', confirm_deal_url(deal: deal.id), class: 'btn btn-pink btn-xs' %>
        </div>
        <div class='col-md-8'>
          <p class='lead'><%= deal.description %> <b>(<%= deal.quantity_available %> left)</b></p>
        </div>
        <div class='col-md-2 text-center'>
          <p><span class='point-value'><%= deal.point_value %></span>
            <br>
            points
          </p>
        </div>

      </div>
    <% end %>
  </div>
</div>
