.container-fluid
  #dispensary-header
    .row.medium-padding-bottom
      .col-md-12      
        %h1#dispensary-title.white
          = @dispensary.name
          %address
            %small
              = @dispensary.address1
              - if @dispensary.address2.present?
                = @dispensary.address2
              = @dispensary.city
              , #{@dispensary.state} #{@dispensary.zip}
        / = link_to 'Browse Menu', dispensary_menu_url(@dispensary), class: 'btn btn-default btn-lg', remote: true
      .col-md-6.col-md-offset-3
        - if current_user
          %p
          %center
            / = link_to "Browse Rewards <br>#{current_user.loyalty_points_for(@dispensary).round(0)} <i class='fa fa-fire'></i>".html_safe, '#', class: 'btn btn-default btn-lg'
#deals.container
  - if @dispensary.recreational && @dispensary.medical
    = render 'hybrid'
  - else
    = render 'single'
