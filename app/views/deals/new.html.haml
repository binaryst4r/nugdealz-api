.container
  .row
    .col-md-6
      %h3 Create a Deal
      %p.lead Use the form to the right to create your deal. Remember, these deals should be the best deals you can offer. We want customers to spread the word!
    .col-md-5.col-md-offset-1
      = form_for [@dispensary, @deal] do |f|
        = f.hidden_field :dispensary_id, value: @dispensary.id
        .form-group.col-md-12
          = f.label :title
          = f.text_field :title, class: 'form-control'
        .form-group.col-md-12
          = f.label :description
          = f.text_field :description, class: 'form-control'
        .form-group.col-md-12
          = f.label :fine_print
          = f.text_field :fine_print, class: 'form-control'
        .form-group.col-md-6
          = f.label :price
          = f.number_field :price, class: 'form-control', step: 0.01, min: 0
        .form-group.col-md-6
          = f.label :quantity_available
          = f.number_field :quantity_available, class: 'form-control', min: 0, step: 1
        .form-group.col-md-6
          = f.check_box :active
          = f.label :active?

        .col-md-12
          = f.submit 'Save', class: 'btn btn-green'
