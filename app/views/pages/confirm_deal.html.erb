<div class='container'>
  <div class='row padding-top'>
    <div id='confirm-deal' class='col-md-6'>
      <center>
        <h2 class='pink'><%= @deal.dispensary.name %></h2>
        <p class='lead'>
          <b><%= @deal.title %></b><br>
          <%= @deal.description %>
        </p>
      </center>

      <p>
        <span class='pull-left'>What you will pay at dispensary</span>
        <span class='pull-right'><%= @deal.in_store_price %></span>
      </p>
      <br>
      <h2 class='green'>
        <span class='pull-left'>What you owe now</span>
        <span class='pull-right'>$0.99</span>
      </h2>

    </div>
    <div class='col-md-4 col-md-offset-1'>
      <%= form_tag '#' do %>
        <div class='form-group col-md-12'>
          <%= label_tag :name %><br>
          <%= text_field_tag :name, nil, class: 'form-control' %>
        </div>

        <div class='form-group col-md-12'>
          <%= label_tag :card_number %><br>
          <%= text_field_tag :card_number, nil, class: 'form-control' %>
        </div>

        <div class='form-group col-md-6'>
          <%= label_tag :exp %><br>
          <%= text_field_tag :exp, nil, class: 'form-control' %>
        </div>

        <div class='form-group col-md-6'>
          <%= label_tag :csc %><br>
          <%= text_field_tag :csc, nil, class: 'form-control' %>
        </div>

        <div class='col-md-12'>
          <p class='lead'>
            <strong>Total:</strong>
            <span class='pull-right pink'>$0.99</span>
          </p>
          <%= submit_tag 'Purchase Deal', class: 'btn btn-green' %>

        </div>

      <% end %>
    </div>
  </div>
</div>
