<h1>Listing payments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Amount</th>
      <th>Deal</th>
      <th>Charge token</th>
      <th>Card last 4</th>
      <th>Card brand</th>
      <th>Description</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.user_id %></td>
        <td><%= payment.amount %></td>
        <td><%= payment.deal_id %></td>
        <td><%= payment.charge_token %></td>
        <td><%= payment.card_last_4 %></td>
        <td><%= payment.card_brand %></td>
        <td><%= payment.description %></td>
        <td><%= payment.created_at %></td>
        <td><%= payment.updated_at %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Payment', new_payment_path %>
