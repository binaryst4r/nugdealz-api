%nav.navbar.navbar-default
  .container-fluid
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle.collapsed{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"}
        %span nugdealz
    / Collect the nav links, forms, and other content for toggling
    #bs-example-navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li= link_to 'home', root_url
        %li= link_to 'how it works', how_it_works_url
      = form_tag '/dispensaries', class: 'navbar-form navbar-left', role: 'search', method: 'get' do
        .form-group
          = text_field_tag :location, nil, class: 'form-control', placeholder: 'location'
          = text_field_tag :nav_search, nil, class: 'form-control', placeholder: 'search dispensaries'
        = submit_tag 'search', class: 'btn btn-green'
      /
        <form class="navbar-form navbar-left" role="search">
        <button type="submit" class="btn btn-default">Submit</button>
        </form>
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to '<i class="fa fa-exclamation-circle"></i> Need Help?'.html_safe, support_url
        - if current_dispensary
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_dispensary.name
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li= link_to "<i class='fa fa-tag'></i> Manage Deals".html_safe, dispensary_deals_url(current_dispensary)
              %li= link_to "<i class='fa fa-plus'></i> Add Deal".html_safe, new_dispensary_deal_url(current_dispensary), class: 'green'
              %li.divider
              %li= link_to '<i class="fa fa-cog"></i> Settings'.html_safe, edit_dispensary_url(current_dispensary)
              %li= link_to '<i class="fa fa-sign-out"></i> Sign Out'.html_safe, destroy_dispensary_session_url, method: 'delete'
        - elsif current_user
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.first_name
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li= link_to '<i class="fa fa-user"></i> My Account'.html_safe, user_url(current_user)
              %li= link_to '<i class="fa fa-cog"></i> Settings'.html_safe, edit_user_url(current_user)
              - if current_user.admin
                %li.divider
                %li
                  = link_to '<i class="fa fa-dashboard"></i> Admin Dashboard'.html_safe, admin_dashboard_url
              %li= link_to '<i class="fa fa-sign-out"></i> Sign Out'.html_safe, destroy_user_session_url, method: 'delete'
        - else
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              %i.fa.fa-sign-in
              Sign In
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li= link_to "User", new_user_session_url
              %li= link_to 'Dispensary', new_dispensary_session_url
          %li= link_to '<i class="fa fa-rocket"></i> Get Started'.html_safe, get_started_url
    / /.navbar-collapse
  / /.container-fluid
