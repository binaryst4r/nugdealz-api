.container
  .col-md-6
    %h2 Getting started selling with nugdealz
    %p.lead Use the form to the right to create a new dispensary. We should use this area to provide a little more information about what theyre actually doing. TBD....
  - if @da.present?
    .col-md-6
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        = f.hidden_field :recreational, value: @da.recreational
        = f.hidden_field :medical, value: @da.medical
        .form-group.col-md-12
          = f.label :name, "Dispensary Name"
          = f.text_field :name, autofocus: true, class: 'form-control', value: @da.dispensary_name, readonly: true
        .form-group.col-md-12
          = f.label :email
          = f.email_field :email, class: 'form-control', value: @da.contact_email, readonly: true
        .form-group.col-md-12
          = f.label :address1, "Street Address"
          = f.text_field :address1, class: 'form-control', value: @da.address1, readonly: true
        .form-group.col-md-12
          = f.label :address2, "Address 2"
          = f.text_field :address2, class: 'form-control', value: @da.address2, readonly: true
        .form-group.col-md-8
          = f.label :city, "City"
          = f.text_field :city, class: 'form-control', value: @da.city, readonly: true
        .form-group.col-md-4
          = f.label :state, "State"
          = f.text_field :state, class: 'form-control', value: @da.state, readonly: true
        .form-group.col-md-12
          = f.label :zip, "Zip Code"
          = f.text_field :zip, class: 'form-control', value: @da.zip, readonly: true
      .col-md-4
        .form-group.col-md-12
          = f.label :password
          = f.password_field :password, autocomplete: "off", class: 'form-control'
        .form-group.col-md-12
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
        .col-md-12
          = f.submit "Sign up", class: 'btn btn-green'
  - else
    .col-md-6
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form-group.col-md-12
          = f.label :name, "Dispensary Name"
          = f.text_field :name, autofocus: true, class: 'form-control'
        .form-group.col-md-12
          = f.label :email
          = f.email_field :email, class: 'form-control'
        .form-group.col-md-12
          = f.label :address1, "Street Address"
          = f.text_field :address1, class: 'form-control'
        .form-group.col-md-12
          = f.label :address2, "Address 2"
          = f.text_field :address2, class: 'form-control'
        .form-group.col-md-8
          = f.label :city, "City"
          = f.text_field :city, class: 'form-control'
        .form-group.col-md-4
          = f.label :state, "State"
          = f.text_field :state, class: 'form-control'
        .form-group.col-md-12
          = f.label :zip, "Zip Code"
          = f.text_field :zip, class: 'form-control'
        .form-group.col-md-12
          = f.label :password
          = f.password_field :password, autocomplete: "off", class: 'form-control'
        .form-group.col-md-12
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
        .form-group.col-md-6
          = f.check_box :recreational
          = f.label :recreational, "Offers Recreational"
        .form-group.col-md-6
          = f.check_box :medical
          = f.label :medical, "Offers Medical"
        .form-group.col-md-12
          = f.submit "Sign up", class: 'btn btn-green'
          = render "dispensaries/shared/links"
