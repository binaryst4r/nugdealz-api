<div class='container'>
	<div class='col-md-4'>
		<h2>Getting started selling with nugdealz</h2>
		<p class='lead'>Use the form to the right to create a new dispensary. We should use this area to provide a little more information about what theyre actually doing. TBD....</p>
	</div>
		<div class='col-md-4'>
		<% if @da %>		
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<%= devise_error_messages! %>

				<%= f.hidden_field :recreational, value: @da.recreational %>
				<%= f.hidden_field :medical, value: @da.medical %>

				<div class='form-group col-md-12'><%= f.label :name, "Dispensary Name" %><br />
				<%= f.text_field :name, autofocus: true, class: 'form-control', value: @da.dispensary_name, readonly: true %></div>

				<div class='form-group col-md-12'><%= f.label :email %><br />
				<%= f.email_field :email, class: 'form-control', value: @da.contact_email, readonly: true %></div>

				<div class='form-group col-md-12'><%= f.label :address1, "Street Address" %><br />
				<%= f.text_field :address1, class: 'form-control', value: @da.address1, readonly: true %></div>

				<div class='form-group col-md-12'><%= f.label :address2, "Address 2" %><br />
				<%= f.text_field :address2, class: 'form-control', value: @da.address2, readonly: true %></div>

				<div class='form-group col-md-8'><%= f.label :city, "Address 2" %><br />
				<%= f.text_field :city, class: 'form-control', value: @da.city, readonly: true %></div>

				<div class='form-group col-md-4'><%= f.label :state, "Address 2" %><br />
				<%= f.text_field :state, class: 'form-control', value: @da.state, readonly: true %></div>

			</div>

			<div class="col-md-4">

				<div class='form-group col-md-12'><%= f.label :password %><br />
					<%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>

				<div class='form-group col-md-12'><%= f.label :password_confirmation %><br />
					<%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>

					<div class='col-md-12'><%= f.submit "Sign up", class: 'btn btn-green' %></div>
			</div>
		<% end %>

		<% else %>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

			  <div class='form-group'><%= f.label :name, "Dispensary Name" %><br />
			  <%= f.text_field :name, autofocus: true, class: 'form-control' %></div>

			  <div class='form-group'><%= f.label :email %><br />
			  <%= f.email_field :email, class: 'form-control' %></div>

			  <div class='form-group'><%= f.label :password %><br />
			    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %></div>

			  <div class='form-group'><%= f.label :password_confirmation %><br />
			    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %></div>

			  <div><%= f.submit "Sign up", class: 'btn btn-green' %></div>
			<% end %>

			<%= render "dispensaries/shared/links" %>
		<% end %>
	</div>
