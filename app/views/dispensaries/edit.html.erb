<div class='container'>
    <div class="col-md-4">
      <h3 class='pink'><%= @dispensary.name %></h3>
    </div>
		<div class='col-md-4'>
		<%= form_for @dispensary do |f| %>

				<div class='form-group col-md-12'><%= f.label :email %><br />
				<%= f.email_field :email, class: 'form-control', value: @dispensary.email %></div>

				<div class='form-group col-md-12'><%= f.label :address1, "Street Address" %><br />
				<%= f.text_field :address1, class: 'form-control', value: @dispensary.address1 %></div>

				<div class='form-group col-md-12'><%= f.label :address2, "Address 2" %><br />
				<%= f.text_field :address2, class: 'form-control', value: @dispensary.address2 %></div>

				<div class='form-group col-md-7'><%= f.label :city, "City" %><br />
				<%= f.text_field :city, class: 'form-control', value: @dispensary.city %></div>

				<div class='form-group col-md-5'><%= f.label :state, "State" %><br />
				<%= f.select :state, options_for_select(us_states, selected: @dispensary.state), {}, class: 'form-control' %></div>

        <div class='form-group col-md-12'><%= f.label :zip %><br />
				<%= f.text_field :zip, class: 'form-control', value: @dispensary.zip %></div>

				<div class="col-md-12">
          <%= f.submit "Save", class: 'btn btn-green' %>
				</div>
			</div>




			</div>
		<% end %>

	</div>
